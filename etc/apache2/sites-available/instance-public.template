            Require    ldap-group cn=exo-employees,ou=groups,dc=exoplatform,dc=org
            AuthLDAPMaxSubGroupDepth 1
        </RequireAll>
    </LocationMatch>

    Include ${APACHE_CONF_DIR}/includes/${DEPLOYMENT_EXT_HOST}.include

</VirtualHost>
